<Window x:Class="FileLister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileLister" Height="350" Width="525">
    <Grid>
		<TextBox x:Name="tbxList" Margin="0,0,0,35" IsReadOnly="True" PreviewDragEnter="tbxListDrag" PreviewDragOver="tbxListDrag" PreviewDrop="tbxListDrop" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
		<!-- PreviewDrop must be used for textboxes -->
		<Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Bottom" Width="150" Click="btnClear_Click"/>
		<Button x:Name="btnClip" Content="To Clipboard" HorizontalAlignment="Right" Margin="10,10,10,10" VerticalAlignment="Bottom" Width="150" Click="btnClip_Click"/>
		<CheckBox x:Name="chkAutoClip" Content="Auto Clipboard" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom"/>

	</Grid>
</Window>
